{
  "manifest_version": 3,
  "name": "Kontextabh채ngige Alternativtexte",
  "version": "1.0",
  "description": "Generiert kontextabh채ngige Alternativtexte f체r Bilder zur Verbesserung der Barrierefreiheit.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["tabs", "activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/scripts/image.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["/scripts/advertisment.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["/scripts/context.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "host_permissions": ["<all_urls>"],
  "commands": {
    "generate-alt": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Generiere Alternativtexte f체r alle Bilder"
    },
    "authormode": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Starte den Autorenmodus"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["scripts/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
